{
  "name": "extension-workshop",
  "version": "2.0.0",
  "description": "Firefox Extension Workshop",
  "main": "assets/scripts/scripts.js",
  "repository": "https://github.com/mozilla/extension-workshop",
  "author": "Lance Cummings <lance@glance.ca>",
  "license": "MPL-2.0",
  "private": true,
  "dependencies": {
    "dompurify": "2.0.12",
    "eleventy-plugin-safe-external-links": "^0.1.5",
    "foundation-sites": "6.6.3",
    "hamburgers": "1.1.3",
    "jquery": "3.5.1",
    "liquidjs": "^9.14.0",
    "lunr": "2.3.8",
    "slick-carousel": "1.8.1",
    "velocity-animate": "1.5.2",
    "velocity-ui-pack": "1.2.2"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "chokidar-cli": "^2.1.0",
    "clean-css": "^4.2.3",
    "eleventy-xml-plugin": "^0.1.0",
    "eslint": "7.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.3",
    "fs-extra": "^9.0.1",
    "markdown-it": "^11.0.0",
    "node-fetch": "^2.6.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "prettier": "2.0.5",
    "pretty-quick": "2.0.1",
    "prismjs": "^1.20.0",
    "rimraf": "3.0.2",
    "stylelint": "13.6.1",
    "stylelint-config-standard": "20.0.0",
    "svgo": "1.3.2",
    "uglify-js": "^3.10.0"
  },
  "scripts": {
    "lint": "eslint .",
    "stylelint": "stylelint --syntax scss **/*.scss",
    "prettier": "prettier --write '**'",
    "prettier-ci": "prettier -c '**'",
    "prettier-dev": "pretty-quick --branch master",
    "test": "npm run prettier-ci && npm run lint && npm run stylelint",
    "clean": "rimraf './src/_site/'",
    "build": "eleventy && sass:build && uglify:build",
    "build:serve": "eleventy --serve --port=8081",
    "build:debug": "DEBUG=Eleventy* eleventy --serve --port=8081",
    "start": "npm-run-all -p build:serve sass:* uglify:*",
    "sass:build": "bin/build-styles",
    "sass:watch": "chokidar 'src/_assets/css/*.scss' -c 'npm run sass:build'",
    "uglify:build": "bin/build-script",
    "uglify:watch": "chokidar 'src/_assets/js/*.js' -c 'npm run uglify:build'"
  }
}
