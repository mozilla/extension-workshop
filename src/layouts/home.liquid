---
layout: full-width
---

<div class="home">

    <header id="top" class="banner intro">
        <div class="graphic-bg">
            <div class="parallaxFG-left left" style="background-image: url('/assets/img/header-v2-a.svg');"></div>
            <div class="parallaxFG-right right" style="background-image: url('/assets/img/header-v2-b.svg');"></div>
        </div>
        <div class="grid-container grid-x grid-padding-x align-middle banner-content">
            <div class="cell small-12 text-center">
                {{ content }}
            </div>
        </div>

        <div class="bottom-content">
            <div class="grid-container grid-x grid-padding-x align-bottom">
                <div class="cell small-12">
                    <section class="search-cta" role="search">
                        {% include search-bar.liquid %}
                    </section>
                </div>
            </div>
        </div>
    </header>

    <section id="about">
        {% capture about %}{% include home/about.md %}{% endcapture %}
        {{ about | markdownify }}
    </section>

    <section id="build">
        {% capture build %}{% include home/build.md %}{% endcapture %}
        {{ build | markdownify }}
    </section>

    <section id="connect">
        {% capture connect %}{% include home/connect.md %}{% endcapture %}
        {{ connect | markdownify }}
    </section>

    <section id="news">
        <div class="bottom-of-page parallaxFG" style="background-image: url('/assets/img/home-footer-left.svg'), url('/assets/img/home-footer-right.svg')"></div>

        <div class="grid-container grid-x grid-padding-x align-center tiles-intro">
            <div class="cell small-12">
                <h2>Latest Developer News</h2>
            </div>
        </div>

        <div class="tiles-container news-slider">
            <div id="rss-feed" class="grid-container grid-x grid-padding-x align-center"></div>
        </div>

        <div class="grid-container grid-x grid-padding-x align-center tiles-footer">
            <div class="cell small-12 medium-8 large-6 text-center">
                <p><a href="https://blog.mozilla.org/addons/">Visit add-ons blog</a></p>
            </div>
        </div>
    </section>

</div>
