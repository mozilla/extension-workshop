{% comment %}
---
templateEngineOverride: liquid
---
{% endcomment %}

<section class="module meta-data">
	<article class="module-content grid-x grid-padding-x">
		<div class="cell small-12">

			{%- if tags and tags.size > 0 -%}
				<p><span class="meta-label tags">Tags:</span>&nbsp;
					{%- for tag in tags -%}
					{% capture tag_name %}{{ tag }}{% endcapture %}
					  <a href="/tags/{{ tag_name }}/">{{ tag_name }}</a>&nbsp;
					{%- endfor -%}
				</p>
			{%- endif -%}

			{%- if contributors and contributors.size > 0 -%}
				<p><span class="meta-label contributors">Contributors:</span>&nbsp;
					{%- for contributor in contributors -%}
					  <a href="https://github.com/{{ contributor }}/" title="View {{ contributor }} on Github">{{ contributor }}</a>&nbsp;
					{%- endfor -%}
				</p>
			{%- endif -%}

			{%- if date -%}
				<p><span class="meta-label date">Last update:</span>&nbsp;
					{%- if last_updated_by -%}
	                    <a href="https://github.com/{{ last_updated_by }}/" title="View {{ last_updated_by }} on Github" itemprop="author" itemscope itemtype="http://schema.org/Person"><span class="p-author h-card" itemprop="name">{{ last_updated_by }}</span></a>&nbsp;
	                {%- endif -%}
	                <time class="dt-published" datetime="{{ date | date_to_xmlschema }}" itemprop="datePublished">
	                    {%- assign date_format = site.minima.date_format | default: "%b %d, %Y" -%}
	                    {{ date | date: date_format }}
	                </time>
				</p>
			{%- endif -%}

		</div>
	</article>
</section>
